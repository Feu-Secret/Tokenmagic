<div style="display: flex; gap: 0.5rem; flex-direction: column;">
    <div class="form-group">    
        <label>Active</label>
        <div class="form-fields">
            <input type="checkbox" name="active" {{checked active}}/>
        </div>
    </div>


    <div class="form-group">    
        <label>Type</label>
        <div class="form-fields">
            <select name="type">
                {{selectOptions typeOptions selected=type}}
            </select>
        </div>
    </div>

    {{#if (eq type "any")}}
    <p>Random values will be picked from the full range defined by the control.</p>
    {{else if (eq type "range")}}
        {{#each controls}}
            {{~>tmfx-control}}
        {{/each}}
    {{else}}
        {{#each controls}}
            {{~>tmfx-control}}
        {{/each}}
        <button type="button" data-action="addListElement">Add</button>
    {{/if}}

    {{!-- {{#if linkables}}
